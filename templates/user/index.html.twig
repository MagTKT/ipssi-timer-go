{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="contain-block">
            <h1>liste des users</h1>
            <div class="wrapper wrapper--w780">
                <div class='url card-3bis'><a href="{{ path('app_register') }}">Creer un nouvel Utilisateur</a></div>
                <div class="card card-3">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Prénom</th>
                                    <th>Nom</th>
                                    <th>Email</th>
                                    <th>Roles</th>
                                    <th>Date de création</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.name }}</td>
                                    <td>{{ user.lastName }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td>{{ user.dateCreation ? user.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>
                                        <a class='color_one' href="{{ path('user_show', {'id': user.id}) }}">Detail</a>
                                        <a class='color_two' href="{{ path('user_edit', {'id': user.id}) }}">Editer</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>  
                    </div>
                </div>
            </div>

            
        </div>
    </div>

{% endblock %}
