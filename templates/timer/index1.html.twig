{% extends 'base.html.twig' %}

{% block title %}Timer index{% endblock %}

{% block body %}
    <h1>Timer index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>DateT Debut</th>
                <th>Date Fin</th>
                <th>Cumul</th>
                <th>Commentaire</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for timer in timers %}
            <tr>
                <td>{{ timer.id }}</td>
                <td>{{ timer.DateTimeDebut ? timer.DateTimeDebut|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ timer.DateTimeFin ? timer.DateTimeFin|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ timer.CumulS }}</td>
                <td>{{ timer.TimerComment }}</td>
                <td>
                    <a href="{{ path('timer_show', {'id': timer.id}) }}">show</a>
                    <a href="{{ path('timer_edit', {'id': timer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('timer_new') }}">Create new</a>
{% endblock %}
