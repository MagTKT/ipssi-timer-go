{% extends 'base.html.twig' %}

{% block title %}Team{% endblock %}

{% block body %}

    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="contain-block">
            <div class="wrapper wrapper--w780">
                <div class="button">
                    <a class='btn btn-info' href="{{ path('team_index') }}">Retour à la liste</a>
                </div>
                    <div class="card card-3">
                        <div class="card-body">
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <th>Name</th>
                                        <td>{{ team.name }}</td>
                                    </tr>
                                    <tr>
                                        <th>Admin</th>
                                        <td>{{ team.getTeamAdmin.name }} {{ team.getTeamAdmin.lastName }}</td>
                                    </tr>
                                    <tr>
                                        <th>Date création</th>
                                        <td>{{ team.dateCreation ? team.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Membre de l'équipe</th>
                                        <td>
                                            {% for team in team.getUserTeams %}
                                                <li>{{ team.idUser.name }} {{ team.idUser.lastName }}</li>
                                            {% endfor %}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            {% if app.user %}
                                {% if app.user.id == team.TeamAdmin.id %}
                                    <div class="button">
                                        <div class="p-t-10 btn btn--pill btn--green">
                                        <a class='btn' href="{{ path('user_team_new', {'idTeam': team.id}) }}">Ajouter membre</a>
                                    </div>
                                {% endif %}
                            {% endif %}
                            <div class="p-t-10 btn btn--pill btn--green">
                                <a class='btn'>Ajout nouveau projet</a>
                            </div>
                            {% for projet in team.getProjects %}
                                <li>{{ projet.nameProject}}</li>
                            {% endfor %}
                        </div>
                        </div>
                    </div>
                </div>

                {% if app.user %}
                    {% if app.user.id == team.TeamAdmin.id %}
                <div class='button'>
                    <button class='btn btn-info'><a href="{{ path('team_edit', {'id': team.id}) }}">editer</a></button>
                    {{ include('team/_delete_form.html.twig') }}
                </div>
                    {% elseif app.user.roles == 'ROLE_ADMIN' %}
                <div class='button'>
                    <a class='btn btn-info' href="{{ path('team_edit', {'id': team.id}) }}">Editer</a>
                    {{ include('team/_delete_form.html.twig') }}
                </div>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
