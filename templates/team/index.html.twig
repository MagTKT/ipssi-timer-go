{% extends 'base.html.twig' %}

{% block title %}Team index{% endblock %}

{% block body %}
    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="contain-block">
        <div class="wrapper wrapper--w780">
            <div class="button">
                <a class='btn btn-info' href="{{ path('team_new') }}">Créer une nouvelle team</a>
            </div>
            <div class="card card-3">
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom</th>
                                <th>Admin du groupe</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for team in teams %}
                            <tr>
                                <td>{{ team.name }}</td>
                                <td>{{ team.getTeamAdmin.name }} {{ team.getTeamAdmin.lastName }}</td>
                                <td>{{ team.dateCreation ? team.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
                                <td>
                                    <a class='color_one' href="{{ path('team_show', {'id': team.id}) }}">Détail</a>
                                    <a class='color_two' href="{{ path('team_edit', {'id': team.id}) }}">Editer</a>
                                </td>
                            </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">Aucune équipe</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        </div>
    </div>
{% endblock %}
