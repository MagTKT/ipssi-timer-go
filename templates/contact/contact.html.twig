{% extends 'base.html.twig' %}

{% block body %}

  <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
    <div class="contain-block">
      <div class="wrapper wrapper--w780">
        <h1>Contact</h1>
        <div class="card card-3">
          <div class="card-body">
            {{ form_start(formulaire) }}
            <div class="input-group input--style-3">
              <div class='input'>
                {{ form_row(formulaire.firstname) }}
                {{ form_row(formulaire.lastname) }}
                {{ form_row(formulaire.phone) }}
                {{ form_row(formulaire.email) }}
                {{ form_rest(formulaire) }}
                <div class="p-t-10 btn btn--pill btn--green">
                  <button class="btn" id="btnContactUs">{{ button_label|default('Envoyer') }}</button>
                </div>
              </div>
            </div>
            {{ form_end(formulaire) }}
            {% for message in app.flashes('success') %}
              <div class="alert alert-success">
              {{ message }}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
