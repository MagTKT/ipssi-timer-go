{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}

    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="contain-block">
            <h1>Projets</h1>
            <div class="wrapper wrapper--w780">
                <div class="button">
                    <a class='btn btn-info' href="{{ path('project_index') }}">Retour à la liste</a>
                </div>
                <div class="card card-3">
                    <div class="card-body">
                        <table class="table">
                            <tbody>
                                <tr>
                                    <th>Nom du projet</th>
                                    <td>{{ project.nameProject }}</td>
                                </tr>
                                <tr>
                                    <th>Equipé attitrés</th>
                                    <td>{{ project.getTeam.name }}</td>
                                </tr>
                                <tr>
                                    <th>Temps de travail cumulé</th>
                                    <td>{{ timer.jours }} jours  {{ timer.heures }}h {{ timer.minutes }}min {{ timer.secondes }}s</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class='button'>
                    <a class='btn btn-info' href="{{ path('project_edit', {'id': project.id}) }}">Modifier</a>
                    {{ include('project/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
