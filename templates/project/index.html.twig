{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}

    <div class="page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
        <div class="contain-block">
            <h1>Listes des Projets</h1>
            <div class="wrapper wrapper--w780">
                <div class='url card-3bis'><a href="{{ path('project_new') }}">Creer un nouveau projet</a></div>
                <div class="card card-3">
                    <div class="card-body">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name_project</th>
                                    <th>actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for project in projects %}
                                <tr>
                                    <td>{{ project.id }}</td>
                                    <td>{{ project.nameProject }}</td>
                                    <td>
                                        <a href="{{ path('project_show', {'id': project.id}) }}">show</a>
                                        <a href="{{ path('project_edit', {'id': project.id}) }}">edit</a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}
